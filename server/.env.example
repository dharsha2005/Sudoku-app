# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
# Get this from: Atlas Dashboard → Database → Connect → Connect your application
# Format: mongodb+srv://USERNAME:PASSWORD@CLUSTER.xxxxx.mongodb.net/DATABASE_NAME?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/sudoku-game?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_16_char_gmail_app_password

# Frontend URL (update for production deployment)
# Development: http://localhost:3000
# Production: https://sudoku-app-secf.onrender.com
FRONTEND_URL=http://localhost:3000
